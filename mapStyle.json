{
    "version": 8,
    "name": "Raster Tiles",
    "sources": {
        "google-road": {
            "attribution" : "(c) 2015 Google - Map data",
            "type": "raster",
            "tiles": [
                "https://mt0.google.com/vt/lyrs=m&x={x}&y={y}&z={z}",
                "https://mt1.google.com/vt/lyrs=m&x={x}&y={y}&z={z}",
                "https://mt2.google.com/vt/lyrs=m&x={x}&y={y}&z={z}",
                "https://mt3.google.com/vt/lyrs=m&x={x}&y={y}&z={z}"
            ],
            "tileSize": 256,
            "maxZoom":27,
            "minZoom":0
        }
    },
    "layers": [
    {
        "id": "google-road",
        "type": "raster",
        "source": "google-road",
        "paint": {
            "raster-fade-duration": 100
        },
        "layout": {
            "visibility":"visible"
        }
    }
    ]
}
